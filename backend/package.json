{
  "name": "impactlink-backend",
  "version": "1.0.0",
  "description": "Backend API for ImpactLink - Transparent micro-donation platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "npx prisma migrate dev",
    "migrate:deploy": "npx prisma migrate deploy",
    "migrate:reset": "npx prisma migrate reset",
    "db:push": "npx prisma db push",
    "db:pull": "npx prisma db pull",
    "db:seed": "node prisma/seed.js",
    "generate": "npx prisma generate",
    "studio": "npx prisma studio",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,json,md}\""
  },
  "keywords": [
    "charity",
    "donation",
    "transparency",
    "blockchain",
    "philanthropy",
    "nonprofit",
    "impact"
  ],
  "author": "ImpactLink Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.8",
    "stripe": "^14.12.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.4",
    "prisma": "^5.20.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/idesignmedia6557/ImpactLink.git"
  },
  "bugs": {
    "url": "https://github.com/idesignmedia6557/ImpactLink/issues"
  },
  "homepage": "https://impactlink.solovedhelpinghands.org.za"
}
