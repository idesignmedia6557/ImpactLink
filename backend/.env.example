# ===================================
# IMPACTLINK ENVIRONMENT CONFIGURATION
# ===================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ===================================
# APPLICATION SETTINGS
# ===================================
NODE_ENV=development
PORT=5000
API_VERSION=v1
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# ===================================
# DATABASE CONFIGURATION
# ===================================
# PostgreSQL connection string format:
# postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL=postgresql://postgres:password@localhost:5432/impactlink_dev?schema=public

# For production (HostKing):
# DATABASE_URL=postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE?schema=public

# ===================================
# JWT AUTHENTICATION
# ===================================
# Generate a secure random string (32+ characters)
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ===================================
# STRIPE PAYMENT INTEGRATION
# ===================================
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# For production:
# STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key
# STRIPE_SECRET_KEY=sk_live_your_live_secret_key
# STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret

# ===================================
# EMAIL CONFIGURATION (Nodemailer)
# ===================================
# Gmail example:
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@impactlink.org
EMAIL_FROM_NAME=ImpactLink Team

# For production (consider SendGrid, AWS SES, or Mailgun):
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USER=apikey
# EMAIL_PASSWORD=your-sendgrid-api-key

# ===================================
# CORS CONFIGURATION
# ===================================
CORS_ORIGIN=http://localhost:3000
# For multiple origins: http://localhost:3000,https://impactlink.solovedhelpinghands.org.za

# ===================================
# RATE LIMITING
# ===================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===================================
# LOGGING
# ===================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ===================================
# SESSION CONFIGURATION
# ===================================
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_TIMEOUT=3600000

# ===================================
# FILE UPLOAD CONFIGURATION
# ===================================
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ===================================
# ADMIN CONFIGURATION
# ===================================
# First admin user credentials (for initial setup)
ADMIN_EMAIL=admin@impactlink.org
ADMIN_PASSWORD=change-this-secure-password
ADMIN_NAME=System Administrator

# ===================================
# SECURITY HEADERS
# ===================================
HELMET_ENABLED=true
HSTS_MAX_AGE=31536000

# ===================================
# TESTING & DEVELOPMENT
# ===================================
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/impactlink_test?schema=public
DEBUG=false
MOCK_STRIPE=false
MOCK_EMAIL=false

# ===================================
# PRODUCTION DEPLOYMENT (HostKing)
# ===================================
# Domain configuration
DOMAIN=impactlink.solovedhelpinghands.org.za
SSL_ENABLED=true

# Database backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ===================================
# OPTIONAL INTEGRATIONS
# ===================================
# Analytics
GOOGLE_ANALYTICS_ID=

# Error tracking (e.g., Sentry)
SENTRY_DSN=

# Cloud storage (e.g., AWS S3, Cloudinary)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=

# ===================================
# NOTES
# ===================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Update all placeholder values with your actual credentials
# 3. Ensure .env is in your .gitignore file
# 4. Never share or commit your .env file
# 5. Use different values for development, staging, and production
# 6. Rotate secrets regularly in production
# 7. Use environment-specific configuration management in production
